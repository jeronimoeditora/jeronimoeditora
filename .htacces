RewriteEngine On

# 1. Remover index.html da URL da página inicial
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /index\.html\ HTTP/
RewriteRule ^index\.html$ https://www.editorajeronimo.pt/ [R=301,L]

# 2. Encaminhar pedidos sem .html para o ficheiro real
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [NC,L]

# 3. Forçar a remoção da extensão .html se alguém tentar entrar com ela
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /(.+)\.html\ HTTP/
RewriteRule ^(.+)\.html$ /$1 [R=301,L]